---
<section class="bg-primary-dark-background/95 font-semibold pb-16 pt-16">
    <h2 class="text-4xl font-bold text-center text-white">Nuestros mejores precios para ti</h2>
    <article class="flex flex-wrap justify-center gap-[2.5rem]">
        {plans.map((plan) => (
            <div class="flex flex-col gap-4 bg-white w-[22rem] h-[39rem] rounded-lg mt-[3.5rem] shadow-custom shadow-secondary-light">
                <img class="w-10 m-auto mt-4 -mb-3" src={plan.img} alt="icon corporative web">
                <h4 class="text-center text-3xl font-bold mt-2">{plan.title}</h4>
                <p class="text-center text-xs m-auto mt-2 -mb-3 w-[80%]">{plan.littleDescription}</p>
                <div class="flex justify-center items-center gap-3 mt-2">
                    <div class="w-[30%] h-[.1rem] rounded-lg bg-secondary-light"></div>
                    <h6 class="font-black text-secondary-light">Que incluye</h6>
                    <div class="w-[30%] h-[.1rem] rounded-lg bg-secondary-light"></div>
                </div>
                <ul class="flex flex-col gap-8 m-auto mt-0 text-[.7rem]">
                    <li class="flex gap-3 h-[2rem] max-w-[20rem] ">
                        <img class="w-4 h-4" src={tick} alt="icon tick">
                        {plan.bOne}
                    </li>
                    <li class="flex gap-3 h-[2rem] max-w-[20rem] ">
                        <img class="w-4 h-4" src={tick} alt="icon tick">
                        {plan.bTwo}
                    </li>
                    <li class="flex gap-3 h-[2rem] max-w-[20rem] ">
                        <img class="w-4 h-4" src={tick} alt="icon tick">
                        {plan.bThree}
                    </li>
                    <li class="flex gap-3 h-[2rem] max-w-[20rem] ">
                        <img class="w-4 h-4" src={tick} alt="icon tick">
                        {plan.bFour}
                    </li>
                </ul>
                <div class="flex flex-col items-center gap-1 h-[13rem] mt-1 -mb-1 bg-primary-dark-intense text-white rounded-b-lg">
                    <p class="text-center text-[.7rem] font-light mt-2">A partir de</p>
                    <p class="text-center text-[1.8rem] -mt-1">USD {plan.price}</p>
                    <button class="flex justify-center items-center gap-1 text-[.8rem] font-medium bg-secondary-light bg-opacity-70 w-[8rem] h-[2.3rem] rounded-sm transition-all mb-1 hover:bg-opacity-100 ">
                        Contactanos
                        <img class="w-[.9rem] h-[.9rem]" src={wpp} alt="icon Whatsapp">
                    </button>
                    <button class="text-secondary-light text-xs mt-3">Enviar mail de contacto</button>
                </div>
            </div>
        ))}
    </article>
</section>