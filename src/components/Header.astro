---
import nimionLogo from '/public/images/nimion-primary-dark.png';
import burgerIcon from '/public/images/menu.png';
---

<header class="flex items-center justify-between bg-transparent-168 h-40">
    <div id="index" class="flex justify-start items-center w-[6rem] h-[6rem] ml-5 lg:ml-25">
        <img id="logo-header" src={nimionLogo} alt="nimion-logo">
        <h4 id="header-nimion" class="opacity-0" >NIMION</h4>
    </div>


    <div class="flex flex-col top-15 right-5 relative sm:hidden">
        <img id="burger-button" class="w-[1.6rem] sm:w-auto self-end" src={burgerIcon} alt="burger-menu">
        <div class="w-10">
        <ul id="nav-menu" class="hidden">
            <li class="mr-5 mb-3 underline hover:text-golden"><a href="#process">Proceso</a></li>
            <li class="mr-5 mb-3 underline hover:text-golden"><a href="#aboutUs">Nosotros</a></li>
            <li class="mr-5 mb-3 underline hover:text-golden"><a href="#faq">FAQ's</a></li>
            <li class="mr-5 mb-3 underline hover:text-golden"><a href="#contact">Contacto</a></li>
        </ul>
        </div>
    </div>
    <ul id="nav-menu" class="hidden sm:flex flex-col sm:flex-row w-auto mr-10 leading-loose sm:leading-none list-none items-start justify-around font-montserrat text-sm text-white">
        <li class="mr-5 hover:text-golden"><a href="#process">Proceso</a></li>
        <li class="mr-5 hover:text-golden"><a href="#aboutUs">Nosotros</a></li>
        <li class="mr-5 hover:text-golden"><a href="#faq">FAQ's</a></li>
        <li class="mr-5 hover:text-golden"><a href="#contact">Contacto</a></li>
    </ul>

    <a class="justify-center items-center rounded-3xl bg-secondary-light/80 text-white w-10 h-14 fixed bottom-10 right-10 z-50 transition-all hover:scale-110 hidden lg:flex" href="#index">
        <p>ðŸ¡©</p>
    </a>
</header>

<script>
    if (typeof document !== 'undefined') {
        const headerNimion = document.getElementById('header-nimion');
        const logoHeader = document.getElementById('logo-header');
        const burguerButton = document.getElementById('burger-button');
        const navMenu = document.getElementById('nav-menu');

        setTimeout(() => {
            logoHeader?.setAttribute('class', 'rotate-360 duration-[1500ms]')
            headerNimion?.setAttribute('class', 'text-center tracking-[0.2rem] font-normal text-[2rem] w-[6rem] ml-5 animate-headerNimionAppear');
        }, 3700);
        burguerButton?.addEventListener('mouseover', () => {
            navMenu?.setAttribute('class', 'absolute rounded-[1px] pl-5 py-3 origin-right bg-secondary-dark-background bg-background-triangle bg-cover bg-no-repeat z-10 top-[-2rem] right-[-1.25rem] flex flex-col lg:flex-row w-screen h-[20rem] leading-[2rem] lg:leading-none list-none items-start font-montserrat text-sm text-white justify-around animate-smallToBig');
        })
        burguerButton?.addEventListener('mouseout', () => {
        navMenu?.setAttribute('class', 'absolute rounded-[1px] pl-5 py-3 origin-right bg-secondary-dark-background bg-background-triangle bg-cover bg-no-repeat z-10 top-[-2rem] right-[-1.25rem] flex flex-col lg:flex-row w-screen h-[20rem] leading-[2rem] lg:leading-none list-none items-start font-montserrat text-sm text-white justify-around animate-bigToSmall');
        })
    }
</script>