---
import yhanaPic from '/public/images/elYhana.png';
import crisPic from '/public/images/elCris.png';
import react from '/public/images/react.png';
import javaScript from '/public/images/javascript.png';
import css from '/public/images/css.png';
import html from '/public/images/html.png';
import java from '/public/images/java.png';
import three from '/public/images/three.png';
import node from '/public/images/node.png';
import fireBase from '/public/images/firebase.png';
import mongo from '/public/images/mongodb.png';
import mysql from '/public/images/mysql.png';
import ts from '/public/images/typescript.png';
import astro from '/public/images/astro.png';

const  profiles = [
    {
        devImg: yhanaPic,
        devName: 'Yhanahi Rosenthal',
        dev: 'Desarrollador',
        devDescription: 'Encargado de gestionar las operaciones de Nimion en la republica del Uruguay. Su dedicación y ética de trabajo inspiran a otros a superar barreras. Su destreza técnica es igualada por su colaboración sobresaliente en equipos multidisciplinarios, guiando a sus compañeros con pasión y conocimiento. Podría tranquilamente ser un Power Ranger o un Guadian de la Galaxia.'
    },
    {
        devImg: crisPic,
        devName: 'Cristian Lotorto',
        dev: 'Desarrollador',
        devDescription: 'Encargado de gestionar las operaciones de Nimion en la republica del Uruguay. Su dedicación y ética de trabajo inspiran a otros a superar barreras. Su destreza técnica es igualada por su colaboración sobresaliente en equipos multidisciplinarios, guiando a sus compañeros con pasión y conocimiento. Thor mismo temblaría si supiera que tiene que enfrentarse a él.'
    }
]

const techsImg = [
    react, javaScript, css, html, java, three, node, fireBase, mongo, mysql, ts, astro
]
---

<section class='flex flex-col justify-center items-center pt-20 bg-primary-dark-background/95 font-montserrat'>
    <h3 class='text-4xl font-bold text-white'>
        Las personas detrás de Nimion.
    </h3>
    <p class='w-128 my-10 text-center text-logo-gray leading-8'>
        Serán quienes estarán acompañándote durante y después de
        todo el proceso de desarrollo de tu proyecto.
    </p>
    <div class='flex justify-between items-center w-full px-20 py-10 bg-black-background/20'>
        { profiles.map((profile, index) => (
            <div class={`flex justify-center items-center w-1/2 ${index % 2 == 0 && 'border-r-2'}`}>
                <div class='flex justify-center items-center w-144'>
                    {index % 2 == 0 && <img class='w-36 h-36' src={profile.devImg} alt="porfile image">}
                    <div class='px-10'>
                        <h5 class='mb-1 font-semibold text-xl text-white'>{profile.devName}</h5>
                        <h6 class='mb-3 text-sm text-logo-gray underline'>{profile.dev}</h6>
                        <p class='pr-8 text-sm text-justify text-logo-gray'>{profile.devDescription}</p>
                    </div>
                    {index % 2 != 0 && <img class='w-36 h-36' src={profile.devImg} alt="porfile image">}
                </div>
            </div>
        )
        ) }
    </div>
    <div class='flex flex-col items-center w-full h-72 bg-primary-dark-intense/40'>
        <h3 class='font-bold text-xl text-golden mt-10'>Tecnologías que usamos</h3>
        <div class='flex justify-around w-full'>
            {techsImg.map((tech)=> <img class="w-[2.5rem] h-[2rem] mt-20" src={tech} alt="tech image"> )}
        </div>
    </div>
</section>